<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <AnalogClock
        android:id="@+id/clock"
        android:dial="@drawable/watch_dial"
        android:hand_hour="@drawable/hour_hand"
        android:hand_minute="@drawable/minute_hand"
        android:hand_second="@drawable/second_hand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/week"
        android:layout_width="wrap_content"
        android:src="@drawable/year_week"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:src="@drawable/week"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@id/clock"
        android:layout_alignBottom="@id/clock"
        android:layout_alignTop="@id/clock"
        android:gravity="center"
        android:textSize="13sp"
        android:text="30"
        android:layout_marginEnd="24dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
</RelativeLayout>